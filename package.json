{
  "name": "movie-searcher",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:5000",
  "engines": {
    "node": "13.7.0",
    "yarn": "1.21.1"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^4.5.1",
    "apollo-boost": "^0.4.7",
    "apollo-server-express": "^2.9.16",
    "axios": "0.18.1",
    "dayjs": "^1.8.19",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "express-static-gzip": "^2.0.6",
    "graphql": "^14.6.0",
    "numeral": "^2.0.6",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "precompress": "^5.1.2",
    "prettier": "^1.19.1",
    "stylelint": "12.0.1",
    "stylelint-config-sass-guidelines": "^6.2.0"
  },
  "scripts": {
    "client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "nodemon -r dotenv/config server/index.js",
    "serve": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server/index.js",
    "lint": "eslint src --ext js,jsx && eslint server && stylelint './src/**/*.jsx'",
    "postbuild": "precompress build/static -t br -i js"
  },
  "eslintIgnore": [
    "serviceWorker.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "react-app",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true
        }
      ],
      "jsx-a11y/label-has-associated-control": "off",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-sort-props": 2
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "selector-class-pattern": null
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
