{
  "name": "movie-searcher",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:5000",
  "engines": {
    "node": "13.8.0",
    "yarn": "1.22.0"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@material-ui/core": "^4.9.3",
    "@material-ui/icons": "^4.9.1",
    "apollo-boost": "^0.4.7",
    "apollo-cache-persist-dev": "^0.2.1",
    "apollo-datasource-rest": "^0.7.0",
    "apollo-server-express": "^2.10.1",
    "dayjs": "^1.8.20",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "express-static-gzip": "^2.0.6",
    "graphql": "^14.6.0",
    "numeral": "^2.0.6",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "precompress": "^6.0.2",
    "prettier": "^1.19.1",
    "stylelint": "13.2.0",
    "stylelint-config-sass-guidelines": "^7.0.0"
  },
  "scripts": {
    "client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "nodemon -r dotenv/config server/index.js",
    "serve": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server/index.js",
    "lint": "eslint src --ext js,jsx && eslint server && stylelint src",
    "postbuild": "precompress build -s -e txt"
  },
  "eslintIgnore": [
    "serviceWorker.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "react-app",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "trailingComma": "es5",
          "singleQuote": true
        }
      ],
      "jsx-a11y/label-has-associated-control": "off",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-sort-props": "warn"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "ignoreFiles": [
      "**/*.jpg",
      "**/*.svg"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
