{
  "name": "movie-searcher",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:5000",
  "engines": {
    "node": "13.10.1",
    "yarn": "1.22.1"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-testing": "^3.1.3",
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.45",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^10.0.0",
    "apollo-boost": "^0.4.7",
    "apollo-cache-persist-dev": "^0.2.1",
    "apollo-datasource-rest": "^0.8.0",
    "apollo-server-express": "^2.11.0",
    "compression": "^1.7.4",
    "dayjs": "^1.8.21",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "express-static-gzip": "^2.0.6",
    "graphql": "^14.6.0",
    "graphql.macro": "^1.4.2",
    "numeral": "^2.0.6",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/near-operation-file-preset": "^1.12.2",
    "@graphql-codegen/typescript": "1.12.2",
    "@graphql-codegen/typescript-operations": "1.12.2",
    "@graphql-codegen/typescript-react-apollo": "1.12.2",
    "@graphql-codegen/typescript-resolvers": "1.12.2",
    "@types/compression": "^1.7.0",
    "@types/express-sslify": "^1.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/numeral": "^0.0.26",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/styled-components": "^5.0.1",
    "concurrently": "^5.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "precompress": "^6.1.0",
    "prettier": "^1.19.1",
    "stylelint": "13.2.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "ts-jest": "^25.2.1",
    "typescript": "3.7.5"
  },
  "scripts": {
    "client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compile": "tsc --project server/tsconfig.json",
    "ts-watch": "tsc --project server/tsconfig.json -w",
    "server": "nodemon -r dotenv/config dist/index.js",
    "serve": "concurrently --kill-others-on-fail -n \"TS-Server,Node,TS-Client\" -c \"cyan.bold,green.bold,yellow.bold\" \"yarn ts-watch\" \"yarn server\" \"yarn client\"",
    "start": "node dist/index.js",
    "lint": "eslint src --ext ts,tsx && eslint server --ext ts && stylelint src",
    "test-server": "jest server --config server/jest.config.json",
    "postbuild": "precompress build -s -e txt && yarn compile",
    "codegen": "graphql-codegen --config codegen.yml && graphql-codegen --config server/codegen.yml",
    "coverage": "yarn test --coverage --watchAll=false && yarn test-server --collectCoverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/containers/**/*.tsx",
      "src/components/**/*.tsx",
      "src/pages/**/*.tsx",
      "src/graphql/**/*.ts"
    ]
  },
  "eslintIgnore": [
    "react-app-env.d.ts",
    "serviceWorker.ts",
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "react-app",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "trailingComma": "es5",
          "singleQuote": true
        }
      ],
      "import/extensions": [
        "error",
        {
          "extensions": [
            ".ts",
            ".js"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "jsx-a11y/label-has-associated-control": "off",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-sort-props": "warn",
      "react/prop-types": "off",
      "import/prefer-default-export": "off",
      "camelcase": "off",
      "import/named": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "ignoreFiles": [
      "**/*.jpg",
      "**/*.svg",
      "**/*.graphql"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
