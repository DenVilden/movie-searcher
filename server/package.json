    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "typescript": "3.8.3"
  },
  "scripts": {
    "serve": "nodemon -e ts,graphql -x ts-node --transpile-only -r dotenv/config src/index.ts",
