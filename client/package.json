{
  "name": "movie-searcher-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.41",
    "@apollo/react-ssr": "^4.0.0-beta.1",
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.46",
    "@testing-library/react": "^10.0.1",
    "dotenv": "^8.2.0",
    "graphql": "^14.6.0",
    "graphql.macro": "^1.4.2",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.3.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.1",
    "@graphql-codegen/near-operation-file-preset": "^1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-operations": "1.13.1",
    "@graphql-codegen/typescript-react-apollo": "1.13.1",
    "@graphql-codegen/typescript-resolvers": "1.13.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "jest": "^25.1.0",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "3.8.3"
  },
  "scripts": {
    "serve": "next",
    "build": "next build",
    "export": "next export",
    "deploy": "yarn build && yarn export",
    "start": "next start",
    "test": "jest",
    "lint": "eslint src --ext ts,tsx --fix",
    "codegen": "graphql-codegen",
    "coverage": "jest --collectCoverage"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "collectCoverageFrom": [
      "src/containers/**/*.tsx",
      "src/components/**/*.tsx",
      "src/pages/**/*.tsx",
      "src/graphql/**/*.ts",
      "!src/pages/_app.tsx",
      "!src/pages/_document.tsx"
    ],
    "preset": "ts-jest"
  },
  "eslintIgnore": [
    "next-env.d.ts",
    "src/generated/**/*"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "react-app",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true
        }
      ],
      "import/extensions": [
        "error",
        {
          "extensions": [
            ".ts",
            ".js"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "react/jsx-props-no-spreading": "off",
      "react/jsx-sort-props": "warn",
      "react/prop-types": "off",
      "camelcase": "off",
      "import/named": "off"
    }
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true
        }
      ],
      [
        "macros"
      ]
    ]
  }
}
